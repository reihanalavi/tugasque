<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item>
        <shape>
            <padding
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"/>
            <solid android:color="#31000000"/>
            <corners android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#008BB1"
                android:endColor="#4FB9DB"
                android:angle="0"/>
            <corners android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>