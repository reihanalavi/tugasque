<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet_buat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="false"
    app:behavior_peekHeight="45dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/gradient_bnw_up"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout_bottomSheet_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/gradient_bottom_sheet"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:id="@+id/constraintLayout_bottomSheet_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="center"
            android:background="@drawable/icon_foto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_bottomSheet_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#e0e0e0"
        android:id="@+id/constraintLayout_bottomSheet_body"
        android:padding="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/unggah_foto_maks_3"
            android:fontFamily="@font/rubik_light"
            android:textSize="16sp"
            android:background="@drawable/rounded_gradient_tugas"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:id="@+id/button_buat_unggah"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/button_buat_unggah"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/logo_foto"
            android:id="@+id/imageView_buat_foto1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="12412471987.png"
            app:layout_constraintTop_toTopOf="@id/imageView_buat_foto1"
            app:layout_constraintBottom_toBottomOf="@id/imageView_buat_foto1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageView_buat_foto1"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView_buat_foto1"
            android:fontFamily="@font/rubik_light"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_buat_foto1"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/logo_foto"
            android:id="@+id/imageView_buat_foto2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="12412471987.png"
            app:layout_constraintTop_toTopOf="@id/imageView_buat_foto2"
            app:layout_constraintBottom_toBottomOf="@id/imageView_buat_foto2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageView_buat_foto2"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView_buat_foto2"
            android:fontFamily="@font/rubik_light"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_buat_foto2"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/logo_foto"
            android:id="@+id/imageView_buat_foto3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="12412471987.png"
            app:layout_constraintTop_toTopOf="@id/imageView_buat_foto3"
            app:layout_constraintBottom_toBottomOf="@id/imageView_buat_foto3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageView_buat_foto3"
            android:layout_marginStart="15dp"
            android:id="@+id/textView_buat_foto3"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/rubik_light"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>