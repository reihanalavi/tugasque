<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinateLayout_buat"
    android:background="@drawable/gradient_tugas"
    tools:context="com.smansara.tugasque.activities.BuatActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/constraintLayout_buat_header"
            android:padding="15dp">
            <Button
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/button_kembali"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/button_buat_kembali"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/buat_tugas"
                android:textAllCaps="true"
                android:id="@+id/textView_buat_header"
                android:fontFamily="@font/rubik_light"
                app:layout_constraintTop_toTopOf="@id/button_buat_kembali"
                app:layout_constraintBottom_toBottomOf="@id/button_buat_kembali"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout_buat_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:padding="15dp"
                    android:id="@+id/constraintLayout_buat_main">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kelas"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_buat_kelas"
                        android:textSize="14sp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/textView_buat_kelas"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/rounded_button_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/pilih_kelas"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/button_buat_kelas"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/guru_pengampu"
                        app:layout_constraintTop_toBottomOf="@id/button_buat_kelas"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_buat_guru"
                        android:textSize="14sp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/textView_buat_guru"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/rounded_button_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/pilih_guru_pengampu"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/button_buat_guru"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout_buat_body"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_buat_main"
                    android:layout_marginTop="32dp"
                    android:background="#e0e0e0">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_mapeljenis"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/mata_pelajaran"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:background="@drawable/rounded_gradient_tugas"
                            android:textColor="@android:color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            android:id="@+id/button_buat_mapel"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/jenis_tugas"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:background="@drawable/rounded_gradient_tugas"
                            android:textColor="@android:color/white"
                            app:layout_constraintTop_toBottomOf="@id/button_buat_mapel"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            android:id="@+id/button_buat_jenis"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_namadeskripsi"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_mapeljenis"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nama_tugas"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:lines="1"
                            android:id="@+id/editText_buat_nama"/>

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/deskripsi_tugas"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/editText_buat_nama"
                            android:id="@+id/editText_buat_deskripsi"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_fototanggal"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_namadeskripsi"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_kalendar"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/button_buat_tanggalMulai"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/button_buat_tanggalMulai"
                            app:layout_constraintBottom_toBottomOf="@id/button_buat_tanggalMulai"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/button_buat_tanggalMulai"
                            android:text="@string/tanggal_mulai"
                            android:fontFamily="@font/rubik_light"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/textView_buat_tanggalMulai"/>

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toBottomOf="@id/button_buat_tanggalMulai"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_kalendar"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/button_buat_tanggalSelesai"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/button_buat_tanggalSelesai"
                            app:layout_constraintBottom_toBottomOf="@id/button_buat_tanggalSelesai"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/button_buat_tanggalSelesai"
                            android:text="@string/tanggal_selesai"
                            android:fontFamily="@font/rubik_light"
                            android:layout_marginStart="15dp"
                            android:textColor="@android:color/holo_red_light"
                            android:id="@+id/textView_buat_tanggalSelesai"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_buat"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_fototanggal"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/buat_tugas"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:background="@drawable/rounded_gradient_tugas"
                            android:textColor="@android:color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            android:id="@+id/button_buat"/>

                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/constraintLayout_kosong"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_buat"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="#e0e0e0">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/imageView_kosong"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="#e0e0e0"/>
                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/bottom_sheet_buat" />

</android.support.design.widget.CoordinatorLayout>