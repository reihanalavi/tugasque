<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinateLayout_detail"
    android:background="@drawable/gradient_tugas"
    tools:context="com.smansara.tugasque.activities.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/constraintLayout_detail_header"
            android:padding="15dp">
            <Button
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/button_kembali"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/button_detail_kembali"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/detail_tugas"
                android:textAllCaps="true"
                android:id="@+id/textView_detail_back"
                android:fontFamily="@font/rubik_light"
                app:layout_constraintTop_toTopOf="@id/button_detail_kembali"
                app:layout_constraintBottom_toBottomOf="@id/button_detail_kembali"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout_detail_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:padding="15dp"
                    android:id="@+id/constraintLayout_detail_main">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kelas"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_detail_kelas"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/textView_detail_kelas"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/rounded_button_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/pilih_kelas"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_detail_kelasE"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/guru_pengampu"
                        app:layout_constraintTop_toBottomOf="@id/textView_detail_kelasE"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_detail_guru"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/textView_detail_guru"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/rounded_button_white"
                        android:layout_marginTop="5dp"
                        android:text="@string/pilih_guru_pengampu"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/rubik_light"
                        android:id="@+id/textView_detail_guruE"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout_detail_body"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_detail_main"
                    android:layout_marginTop="32dp"
                    android:background="#e0e0e0">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_mapeljenis"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mata_pelajaran"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_mapel"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/test_mapel"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_mapel"
                            android:id="@+id/textView_detail_mapelE"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/jenis_tugas"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_mapelE"
                            android:layout_marginTop="10dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_jenis"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/test_jenis"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_jenis"
                            android:id="@+id/textView_detail_jenisE"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_namadeskripsi"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_mapeljenis"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nama_tugas"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_nama"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/project_game_modul_1"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_nama"
                            android:id="@+id/textView_detail_namaE"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/deskripsi_tugas"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_namaE"
                            android:layout_marginTop="10dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_deskripsi"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/test_deskripsi"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_deskripsi"
                            android:id="@+id/textView_detail_deskripsiE"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_fototanggal"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_namadeskripsi"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/senin_31_desember_2019"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_green_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/textView_detail_tanggalMulai"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/senin_31_desember_2019"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_red_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_tanggalSelesai"/>
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_lastupdated"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_fototanggal"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Terakhir update pada Sunday, 31 December 2019 oleh anda"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_lastupdated"/>
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout_detail_teruskan"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_lastupdated"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/teruskan_ke_kelas"
                            android:textAllCaps="true"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/textView_detail_teruskan"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/textView_detail_teruskan"
                            android:layout_marginTop="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/button_detail_kelas"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/teruskan"
                            android:background="@drawable/rounded_gradient_tugas"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/button_detail_kelas"
                            android:layout_marginTop="10dp"
                            android:id="@+id/button_detail_teruskan"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/ubah_tugas"
                            android:background="@drawable/rounded_buton_colored_thin"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/rubik_light"
                            android:textSize="16sp"
                            android:id="@+id/button_detail_ubah"
                            app:layout_constraintTop_toBottomOf="@id/button_detail_teruskan"
                            android:layout_marginTop="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:id="@+id/constraintLayout_kosong"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_detail_teruskan"
                        android:padding="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="#e0e0e0">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView_kosong"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="15dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:background="#e0e0e0"/>
                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/bottom_sheet_detail"/>

</android.support.design.widget.CoordinatorLayout>